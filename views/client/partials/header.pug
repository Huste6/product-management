include ../../client/mixins/sub-menu.pug

header.header 
  .container 
    .row.align-items-center
      .col-3 
        .inner-logo 
          a(href='/')
            img(src="/images/logo.svg", alt="Logo")
      .col-4
        form(
          action="/search"
          method="GET"
        )
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập từ khóa..."
              class="form-control"
              name="keyword"
              value=keyword
            )
            button( 
              type="submit"
              class="btn btn-primary"
            ) Tìm
      .col-5
        .inner-menu 
          ul 
            li 
              a(href="/") Trang chu 
            li(class="sub-menu")
              - const pathProduct = "/product"
              a(href = pathProduct) San pham
              +sub-menu(layoutProductCategory,pathProduct)