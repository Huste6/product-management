extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)
    .container
        .row.justify-content-center
            .col-12.col-md-8.col-lg-6
                .login-container
                    h1(class="text-center login-header") Đăng nhập
                    form(
                        action=`${prefixAdmin}/auth/login`
                        method="POST"
                    )
                        .form-group
                            label(for="email") Email
                            input(
                                type="email"
                                class="form-control"
                                id="email"
                                name="email"
                                placeholder="Nhập email"
                                required
                            )
                        .form-group
                            label(for="password") Mật khẩu
                            input(
                                type="password"
                                class="form-control"
                                id="password"
                                name="password"
                                placeholder="Nhập mật khẩu"
                                required
                            )
                        .form-group
                            button(
                                type="submit"
                                class="btn btn-primary btn-block"
                            ) Đăng nhập
