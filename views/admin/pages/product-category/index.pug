extends ../../layouts/default.pug
include ../../mixins/table-tree.pug
include ../../mixins/alert.pug

block main
    if(role.permissions.includes("products-category-view"))
        h1 Trang danh mục sản phẩm
        +alert-success("5000")
        .card.mb-3 
            .card-header Danh sach
            .card-body 
                .row 
                    .col-8
                    .col-4 
                        if(role.permissions.includes("products-category-create"))
                            a(
                                href=`${prefixAdmin}/product-category/create`
                                class="btn btn-outline-success"
                            ) +Them moi
                table(
                    class="table table-hover table-sm table-striped"
                    checkbox-multi
                )
                    thead.thead-dark
                        tr 
                            th 
                                input(type="checkbox" name="checkall")
                            th STT
                            th Hinh anh 
                            th Tieu de 
                            th Vi tri
                            th Trang thai 
                            th Hanh dong
                    tbody 
                        +table-tree(records)
        //- form delete item
        form(
            action=""
            method="POST"
            id="form-delete-product-category"
            data-path=`${prefixAdmin}/product-category/delete`
        )

        script(src="/admin/js/product-category.js")
    else 
        h1 Bạn không có quyền truy cập